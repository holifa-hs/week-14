     cout << " 0. Perpangkatan" <<endl;
     cout << " "<<endl;
     cout << " =================================================="<<endl;
     cout<<" "<<endl;
     
     cout << " Masukkan opsi : ";
     cin>> paket ;
     if (paket==1)
     {
         cout << "Masukkan angka pertama :\n";
         cin >> numberOne;
         cout << "Masukkan angka kedua :\n";
         cin >> numberTwo;
         cout << "Hasil :\n";
         cout << numberOne+numberTwo;
         cout << "\n\n\n";
     }
     else if (paket==2)
     {
         cout << "Masukkan angka pertama :\n";
         cin >> numberOne;
         cout << "Masukkan angka kedua :\n";
         cin >> numberTwo;
         cout << "Hasil :\n";
         cout << numberOne-numberTwo;
         cout << "\n\n\n";
     }
     else if (paket==3)
     {
         cout << "Masukkan angka pertama :\n";
         cin >> numberOne;
         cout << "Masukkan angka kedua :\n";
         cin >> numberTwo;
         cout << "Hasil :\n";
         cout << numberOne*numberTwo;
         cout << "\n\n\n";
     }
     else if (paket==4)
     {
         cout << "Masukkan angka pertama :\n";
         cin >> numberOne;
         cout << "Masukkan angka kedua :\n";
         cin >> numberTwo;
         cout << "Hasil :\n";
         cout << numberOne/numberTwo;
         cout << "\n\n\n";
     }
     else if (paket==5)
     {
         cout << "Masukkan angka pertama :\n";
         cin >> numberOne;
         cout << "Masukkan angka kedua :\n";
         cin >> numberTwo;
         cout << "Hasil :\n";
         cout << int(numberOne)%int(numberTwo);
         cout << "\n\n\n";
     }
     else if (paket==6)
     {
        cout << "Masukkan nilai cosinus yang ingin dicari :\n";
        cin >> numberOne;
        cout << "Hasil :\n";
        cout << cos(numberOne);
        cout << "\n\n\n";
     }
     else if (paket==7)
     {
        cout << "Masukkan nilai sinus yang ingin dicari :\n";
        cin >> numberOne;
        cout << "Hasil :\n";
        cout << sin(numberOne);
        cout << "\n\n\n";
     }
     else if (paket==8)
     {
        cout << "Masukkan nilai tangen yang ingin dicari :\n";
        cin >> numberOne;
        cout << "Hasil :\n";
        cout << tan(numberOne);
        cout << "\n\n\n";
