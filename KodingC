     else if (paket==0)
     {
        cout << "Masukkan angka pertama :\n";
        cin >> numberOne;
        cout << "Masukkan angka yang ingin dijadikan pangkat :\n";
        cin >> numberTwo;
        cout << "Hasil :\n";
